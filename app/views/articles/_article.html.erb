<div id="<%= dom_id article %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= article.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Content:</strong>
    <%= article.content %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Image:</strong>
    <%= image_tag article.image.url if article.image.present? %>
  </p>

  <% if action_name !="show" %>
    <div class="flex items-center">
      <%= link_to "Show" , article, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
        <%= link_to "Edit" , edit_article_path(article),
          class: "rounded-lg py-3 px-5 ml-2 bg-gray-100 inline-block font-medium" %>
    </div>
    <hr class="mt-6">
    <% end %>

</div>
